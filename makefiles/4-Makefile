CC= gcc
SRC = main.c school.c
OBJ = $(SRC:.c c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
		$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
clean:
				$(RM) -f *~ $(NAME)
oclean:
				$(RM)-f $(OBJ)
fclean: 
		$(RM)-f *~ $(NAME) $(OBJ)
re: oclean $(OBJ)
	.PHONY: clean oclean fclean re
